pipeline{
  agent any
  tools{
    maven "maven_home"
  }
  stages{
    stage('GitClone'){
      steps{
        git "https://github.com/JoyOrji1/visa-app.git"
      }
    }
    stage('Test&Build'){
      steps{
        sh "mvn clean package"
      }
    }
    stage('CodeQuality'){
      steps{
        sh "mvn sonar:sonar"
      }
    }
    stage('UploadArtifact'){
      steps{
        sh "mvn deploy"
      }
    }
    stage('message'){
      steps{
        sh "echo CI job successful"
      }
    }
  }
}
